        </dependency>
        
         <!-- alipay-sdk -->
        <dependency>
          <groupId>com.alipay</groupId>
          <artifactId>sdk-java</artifactId>
          <version>1.0</version>
          <scope>system</scope>
		  <systemPath>${project.basedir}/src/main/webapp/WEB-INF/lib/alipay-api-1.0.jar</systemPath>
    	</dependency>
        
         <!-- 上传组件包 -->  
        <dependency>  
            <groupId>commons-fileupload</groupId>  
